  <h1>{{ post.title }}</h1>
  <h2>{{ post.subtitle }}</h2>
  <p style='font-size: 0.8em'>By <span style='text-transform: uppercase'>{% for author in post.authors %}{{author.name}}{% endfor %}</span>  </p>
  {{ post.body | markdownify | safe }}
  <p><a href="{{ '/' | url }}">‚Üê Home</a></p>
</article>
